<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textCrimeT"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Murder"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000000" />

            <View
                android:id="@+id/view1"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Year :"
                    android:textSize="15sp" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="10dp"
                    android:background="#000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number :"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text2014"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="2014"
                    android:textSize="15sp" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="10dp"
                    android:background="#000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text2014num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text2015"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="2015"
                    android:textSize="15sp" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="10dp"
                    android:background="#000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text2015num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4321"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/textVariation"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="% Variation in 2015 over 2014    :  24%"
                android:textSize="17sp"
                android:textColor="#616161"/>
            <TextView
                android:id="@+id/textArrestees"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Arestees in 2015    :  234"
                android:textSize="17sp"
                android:textColor="#616161"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>